<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ka.dinner.repository.user.UserTypeMapper">
    <insert id="insert">
        insert into user_types values (#{userType.id}, #{userType.name})
    </insert>

    <delete id="delete">
        delete from user_types where user_type_id=#{id}
    </delete>

    <update id="update">
        update user_types SET user_type_name=#{name}
        where user_type_id=#{id}
    </update>

    <select id="selectAll" resultType="Item">
        select * from user_types
    </select>

    <select id="selectById" resultType="Item">
        select * from user_types where user_type_id=#{id}
    </select>

    <select id="selectByName" resultType="Item">
        select * from user_types where user_type_name=#{name}
    </select>

</mapper>
